    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/kasir-barati/nestjs-backend-common.git"
  },
  "keywords": [
    "npm",
    "common",
    "nestjs",
    "nodejs",
    "javascript",
    "typescript"
  ],
  "author": "kasir-barati",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kasir-barati/nestjs-backend-common/issues"
  },
